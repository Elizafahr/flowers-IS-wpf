<Window x:Class="flowers.PointAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flowers"
        mc:Ignorable="d"
        Title="PointAdd" Height="450" Width="500">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Адрес пункта"></Label>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBox  Text="{Binding adress}"  Margin="5"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
            <Button x:Name="btnAdd" Height="80" Margin="20" Width="250" VerticalAlignment="Center" HorizontalAlignment="Center" Content="Сохранить" Background="White" Click="btnAdd_Click" />
        </StackPanel>

    </Grid>
</Window>
